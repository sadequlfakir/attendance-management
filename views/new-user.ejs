<form action="/users" method="POST" class="bg-white p-6 rounded shadow-md">
  <div class="mb-4">
    <label class="block mb-1 font-bold">UID</label>
    <input name="uid" class="w-full border p-2" required />
  </div>
  <div class="mb-4">
    <label class="block mb-1 font-bold">Name</label>
    <input name="name" class="w-full border p-2" required />
  </div>
  <div class="mb-4">
    <label class="block mb-1 font-bold">Email</label>
    <input name="email" type="email" class="w-full border p-2" />
  </div>
  <div class="mb-4">
    <label class="block mb-1 font-bold">Role</label>
    <input name="role" class="w-full border p-2" />
  </div>
  <div class="mb-4">
    <label class="block mb-1 font-bold">Department</label>
    <input name="department" class="w-full border p-2" />
  </div>
  <button type="submit" class="bg-green-500 text-white px-4 py-2 rounded">
    Create
  </button>
</form>
